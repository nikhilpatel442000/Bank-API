<%if user_signed_in?  && current_user.role == 'admin' %>
  <div id="wrapper" class="active">
    <div id="sidebar-wrapper">
      <ul id="sidebar_menu" class="sidebar-nav">
          <li class="sidebar-brand"><a id="menu-toggle" href="#">Menu<span id="main_icon" class="glyphicon glyphicon-align-justify"></span></a></li>
      </ul>
      <ul class="sidebar-nav" id="sidebar">     
        <li><%=link_to 'pay', new_transaction_path  %></li>
        <li><%=link_to "new account", new_account_path %></li>
        <li><%=link_to "my account details", account_path(current_user.account.id)  %></li>
        <li><%=link_to 'my transactions', transaction_path(current_user.account.id)%></li>
        <li><%=link_to "Logout", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
        
    <div id="page-content-wrapper">
      <div class="page-content inset">
        <div class="row">
          <div class="col-md-12">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
      
  </div>

<%elsif user_signed_in? %>
  <div id="wrapper" class="active">
